<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather App</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <div class="container mt-5">
      <h1 class="text-center mb-4">Weather App</h1>
      <div class="card">
        <div class="card-body">
          <form id="weatherForm">
            <div class="form-group">
              <label for="address">Enter Address:</label>
              <input type="text" class="form-control" id="address" required placeholder="e.g., Chandigarh">
            </div>
            <button type="button" id="getWeatherBtn" class="btn btn-primary">Get Weather</button>
            <button type="button" id="saveWeatherBtn" class="btn btn-success">Save to History</button>
            <button type="button" id="showHistoryBtn" class="btn btn-info">Show History</button>
            <button type="button" id="dynamicElementsBtn" class="btn btn-secondary">Add Elements</button>
          </form>
        </div>
      </div>

      <div id="weatherResults" class="mt-4"></div>
      <div id="historyResults" class="mt-4"></div>

      <!-- Dynamic elements container -->
      <div
        id="dynamicContainer" class="dynamic-container">
        <!-- Dynamic elements will be added here -->
      </div>

    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/app.js"></script>
 <script>
    $(document).ready(function() {
      // Counter
      let dynamicElementCount = 0;
      
      // Add dynamic element when button is clicked
      $('#dynamicElementsBtn').click(function() {
        dynamicElementCount++;
        const newElement = $(`
          <div class="dynamic-element" id="dynamicElement${dynamicElementCount}">
            <h4>Dynamic Element ${dynamicElementCount}</h4>
            <p>Climate is what we expect, weather is what we get.</p>
            <button class="btn btn-sm btn-outline-danger remove-btn" data-id="${dynamicElementCount}">Remove</button>
          </div>
        `);
        $('#dynamicContainer').append(newElement);
      });
      
      // Remove dynamic element (using event delegation)
      $('#dynamicContainer').on('click', '.remove-btn', function() {
        const elementId = $(this).data('id');
        $(`#dynamicElement${elementId}`).remove();
      });
    });
  </script>
  </body>
</html>